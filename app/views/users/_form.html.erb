<div class="row">
	<div class="form col-md-8 col-md-offset-2">
	
		<%= render 'common/errors', obj: @user %>
	
		<%= form_for @user do |f| %>
    
		<span>
					<%= f.label :name, class: "form-label" %>
      				<%= f.text_field :name, class: "form-field" %>
    		</span>
    		<span>
      				<%= f.label :email, class: "form-label" %>
     	 			<%= f.email_field :email, class: "form-field" %>
     		</span>
    	 	<span> 
      				<%= f.label :password, class: "form-label" %>
   	   				<%= f.password_field :password, class: "form-field" %>
      		</span>
      
      		<%= f.submit(@user.new_record? ? 'Register' : 'Update Profile', class: "btn btn-primary submit") %>
    	<% end %>
  	</div>
</div>
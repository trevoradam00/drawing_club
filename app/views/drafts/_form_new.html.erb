<div class="row">
	<div class="form col-md-8 col-md-offset-2">
	
		<%= render 'common/errors', obj: @draft %>
	
		<%= form_for(@draft, :url => project_drafts_path(@project)) do |f| %>
    
		<span>
					<%= f.label :name, class: "form-label" %>
      				<%= f.text_field :name, class: "form-field" %>
    		</span>
    		<span>
      				<%= f.label :description, class: "form-label" %>
     	 			<%= f.text_area :description, class: "form-field", rows: 10 %>
     		</span>
      
      		<%= f.submit 'Create Draft', class: "btn btn-primary submit" %>
    	<% end %>
  	</div>
</div>